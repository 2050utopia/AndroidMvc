<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <!--Though layout for portrait mode is not needed. We need it to avoid crash on rotation back
    from landscape to portrait where the Android framework requires the layout to restore fragment-->
    <FrameLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:id="@+id/note_large_leftPane"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/note_large_leftPane"
        android:id="@+id/note_large_rightPane"/>
</FrameLayout>